<%= render "shared/second-header"%>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>マイページ編集</h5>
      <%=link_to 'マイページへ戻る', :back, class: 'nav-login'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f| %>
        <%= render "shared/error_messages", model: f.object %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :image, "プロフィール画像"%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.file_field :image %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname, "ニックネーム"%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, placeholder:"例) fotsal太郎", autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, "メールアドレス"%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"PC・携帯どちらでも可"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :age, "年齢"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :age, placeholder:"例) 27", autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :years_of_experience_id, "経験年数" %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:years_of_experience_id, YearsOfExperience.all, :id, :name, {}, {class:"select-box", id:"years_of_experience"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :introduction, "紹介文"%>
          </div>
          <div class='field-input'>
            <%= f.text_area :introduction, class:"form_text_area", placeholder:"例) フットサル好きです！よろしくお願いします！", size: "46x10", autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>