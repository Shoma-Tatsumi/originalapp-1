<%= render "shared/second-header"%>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
      <%=link_to 'ログイン済みの方はこちら', new_user_session_path, class: 'nav-login'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: user_registration_path, local: true do |f|%>
        <%= render "shared/error_messages", model: f.object %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname, "ニックネーム"%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, placeholder:"例) fotsal太郎", autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, "メールアドレス"%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"PC・携帯どちらでも可"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password, "パスワード"%>
            <span class="indispensable">必須</span>
            <%# <i>(英数字6文字以上)</i> %>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, placeholder:"半角英数字6文字以上", autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation, "確認用パスワード"%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力してください", autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :age, "年齢"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :age, placeholder:"例) 27(半角数字のみ)", autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :years_of_experience_id, "経験年数" %>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:years_of_experience_id, YearsOfExperience.all, :id, :name, {}, {class:"select-box", id:"years_of_experience"}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :introduction, "紹介文"%>
          </div>
          <div class='field-input'>
            <%= f.text_area :introduction, class:"form_text_area", placeholder:"例) フットサル好きです！よろしくお願いします！", size: "46x10", autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
