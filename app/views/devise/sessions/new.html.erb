<%= render "shared/second-header"%>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Log in</h2>
      <h5>登録しているユーザーでログイン</h5>
      <%#= render "devise/shared/links"%>
      <%=link_to '新規登録がまだの方はこちら', new_user_registration_path, class: 'nav-sign-up'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: user_session_path, local: true do |f|%>
        <%= render 'shared/error_messages', model: f.object %> 
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, "メールアドレス"%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true%>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :password, "パスワード"%>
              <span class="indispensable">必須</span>
            </div>
            <div class='field-input'>
              <%= f.password_field :password, placeholder:"半角英数字６文字以上", autocomplete: "off"%>
            </div>
          </div>
          <div class='actions'>
            <%= f.submit "Log in", class: 'btn'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
